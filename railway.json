{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "./start.sh",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "variables": {
    "PYTHON_VERSION": "3.9.18",
    "PORT": "8080",
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production",
    "GUNICORN_CMD_ARGS": "--bind=0.0.0.0:8080 --workers=4 --threads=2 --worker-class=gthread --worker-connections=1000 --timeout=300 --keep-alive=5 --max-requests=1000 --max-requests-jitter=50 --access-logfile=- --error-logfile=- --log-level=debug --capture-output"
  }
}